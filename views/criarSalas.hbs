<div class="container d-flex justify-content-center">

    {{#if msgSuccess}}

    <div class="alert alert-success alert-dismissible fade show mb-0 mt-4" role="alert" style="width: fit-content;">
        {{msgSuccess}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
    {{#if msgError}}
    <div class="alert alert-danger alert-dismissible fade show mb-4 mt-4" role="alert">
        {{msgError}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
    </div>
    {{/if}}
</div>

<div class="container text-center">
    <div class="container-fluid rounded" id="formulario">
        <form action="addSalas" method="POST">
            <div class="form-group">
                <label for="nome">Nome da Sala</label>
                <input required type="text" class="form-control" id="nome" name="nome">
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-dark">Inserir</button>
            </div>
        </form>
    </div>
</div>